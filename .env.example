# LCL Local Development Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================

# For Local Development (using Supabase CLI / Docker):
# Run `supabase start` to get these values automatically
# Default local URL: http://localhost:54321
# Default local anon key: will be shown after `supabase start`

VITE_SUPABASE_PROJECT_ID="your-project-id"
VITE_SUPABASE_URL="http://localhost:54321"
VITE_SUPABASE_PUBLISHABLE_KEY="your-anon-key"

# For Remote Development (using Supabase Cloud):
# Get these from your Supabase project settings > API
# VITE_SUPABASE_URL="https://your-project-id.supabase.co"
# VITE_SUPABASE_PUBLISHABLE_KEY="your-anon-key"

# ==============================================
# CALENDAR SYNC CONFIGURATION (Optional)
# ==============================================

# Google Calendar OAuth
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Enable the Google Calendar API and configure OAuth consent screen
# Required scopes: calendar.events, userinfo.email, userinfo.profile, openid
VITE_GOOGLE_CLIENT_ID=""
VITE_GOOGLE_CLIENT_SECRET=""
VITE_GOOGLE_OAUTH_REDIRECT_URL="http://localhost:5173/calendar/callback/google"

# Microsoft Outlook Calendar OAuth
# Create app at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
# Configure API permissions: Calendars.ReadWrite, User.Read, offline_access
VITE_MICROSOFT_CLIENT_ID=""
VITE_MICROSOFT_CLIENT_SECRET=""
VITE_MICROSOFT_OAUTH_REDIRECT_URL="http://localhost:5173/calendar/callback/microsoft"

# Token encryption key for securing OAuth tokens at rest
# Generate with: openssl rand -base64 32
CALENDAR_TOKEN_ENCRYPTION_KEY=""

# ==============================================
# DEVELOPMENT OPTIONS
# ==============================================

# Enable verbose Supabase logging in development
# VITE_SUPABASE_DEBUG="true"

# Skip Supabase connection check on startup
# VITE_SKIP_SUPABASE_CHECK="true"
