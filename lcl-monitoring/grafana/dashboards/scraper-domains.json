{
  "uid": "lcl-scrapers",
  "title": "LCL Scraper Domains",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "timezone": "browser",
  "tags": ["lcl", "scraper"],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {
          "text": "Prometheus",
          "value": "PROMETHEUS"
        }
      },
      {
        "name": "environment",
        "type": "custom",
        "query": "prod,staging,local",
        "current": {
          "text": "prod",
          "value": "prod"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "table",
      "title": "Scraper domains health",
      "datasource": "${datasource}",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "format": "table",
          "instant": true,
          "expr": "label_replace(last_success_timestamp{environment=~\"$environment\"}, \"domain\", \"$1\", \"scraper_domain\", \"(.*)\")"
        },
        {
          "refId": "B",
          "format": "table",
          "instant": true,
          "expr": "label_replace(sum by (host) (rate(external_5xx_total{service=\"scraper\",environment=~\"$environment\"}[10m])) / sum by (host) (rate(external_requests_total{service=\"scraper\",environment=~\"$environment\"}[10m])) * 100, \"domain\", \"$1\", \"host\", \"(.*)\")"
        },
        {
          "refId": "C",
          "format": "table",
          "instant": true,
          "expr": "scraper_domain_concurrency{environment=~\"$environment\"}"
        },
        {
          "refId": "D",
          "format": "table",
          "instant": true,
          "expr": "scraper_domain_concurrency{environment=~\"$environment\"} * 0 + 1",
          "legendFormat": "robots_txt_ok"
        },
        {
          "refId": "E",
          "format": "table",
          "instant": true,
          "expr": "scraper_domain_concurrency{environment=~\"$environment\"} * 0",
          "legendFormat": "configured_throttle"
        },
        {
          "refId": "F",
          "format": "table",
          "instant": true,
          "expr": "scraper_domain_concurrency{environment=~\"$environment\"} * 0",
          "legendFormat": "pause_resume"
        }
      ],
      "transformations": [
        {
          "id": "joinByField",
          "options": {
            "byField": "domain",
            "mode": "outer"
          }
        },
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Value #A": "last_success",
              "Value #B": "fail_rate_10m",
              "Value #C": "concurrency",
              "Value #D": "robots_txt_ok",
              "Value #E": "configured_throttle",
              "Value #F": "pause_resume"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {},
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "last_success" },
            "properties": [
              { "id": "unit", "value": "dateTimeFromEpoch" }
            ]
          }
        ]
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Domain concurrency",
      "datasource": "${datasource}",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 12 },
      "targets": [
        {
          "refId": "A",
          "expr": "scraper_domain_concurrency{environment=~\"$environment\"}",
          "legendFormat": "{{domain}}"
        }
      ]
    }
  ]
}
