/**
 * IO26 Liquid Glass Design System
 * 
 * Defines the "Liquid Glass" visual foundation for the IO26 Standards.
 * Features backdrop-filter effects, squircle corners, and luminous borders.
 */

/* Base Liquid Glass Card */
.liquid-glass-card {
  backdrop-filter: blur(25px) saturate(190%) contrast(90%);
  -webkit-backdrop-filter: blur(25px) saturate(190%) contrast(90%);
  border-radius: 28px; /* IO26 Squircle */
  border: 1px solid rgba(255, 255, 255, 0.2);
  background: rgba(255, 255, 255, 0.08);
  position: relative;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* Dark mode adjustments */
.dark .liquid-glass-card {
  background: rgba(0, 0, 0, 0.15);
  border-color: rgba(255, 255, 255, 0.1);
}

/* Hover state with subtle lift */
.liquid-glass-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
}

/* Active/pressed state */
.liquid-glass-card:active {
  transform: scale(0.98);
}

/* Luminous Glass variant for suggestion banners */
.luminous-glass-banner {
  backdrop-filter: blur(30px) saturate(180%) brightness(1.05);
  -webkit-backdrop-filter: blur(30px) saturate(180%) brightness(1.05);
  border-radius: 24px;
  border: 1px solid rgba(255, 255, 255, 0.25);
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.15) 0%,
    rgba(255, 255, 255, 0.05) 100%
  );
  box-shadow: 
    0 4px 24px rgba(0, 0, 0, 0.08),
    inset 0 1px 0 rgba(255, 255, 255, 0.2);
}

.dark .luminous-glass-banner {
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.1) 0%,
    rgba(255, 255, 255, 0.02) 100%
  );
  border-color: rgba(255, 255, 255, 0.15);
}

/* Specular Glint overlay for device tilt effects */
.specular-glint {
  position: absolute;
  inset: 0;
  pointer-events: none;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, var(--glint-opacity, 0.15)) 45%,
    rgba(255, 255, 255, var(--glint-opacity, 0.15)) 55%,
    rgba(255, 255, 255, 0) 100%
  );
  opacity: var(--glint-opacity, 0);
  transition: opacity 0.15s ease-out;
  border-radius: inherit;
}

/* Proximity Pulse animation for nearby users */
.proximity-pulse-ring {
  position: absolute;
  inset: -4px;
  border-radius: 50%;
  border: 2px solid var(--proximity-color, hsl(var(--primary)));
  animation: proximity-glow 2s ease-in-out alternate infinite;
  pointer-events: none;
}

/* Ambient Shadow effect for event cards */
.ambient-shadow {
  position: absolute;
  inset: 0;
  border-radius: inherit;
  background: radial-gradient(
    ellipse at bottom,
    var(--ambient-color, transparent) 0%,
    transparent 70%
  );
  opacity: 0.4;
  pointer-events: none;
  z-index: 0;
}

/* Device tilt transform container */
.tilt-transform {
  perspective: 1000px;
  transform-style: preserve-3d;
}

.tilt-content {
  transform: 
    rotateY(calc(var(--device-tilt-x, 0) * 0.5deg))
    rotateX(calc(var(--device-tilt-y, 0) * -0.5deg));
  transition: transform 0.1s ease-out;
  transform-style: preserve-3d;
}

/* CSS Custom Properties for device orientation */
:root {
  --device-tilt-x: 0;
  --device-tilt-y: 0;
  --glint-opacity: 0;
}
